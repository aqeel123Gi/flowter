dynamic clone<T>(dynamic original) {
  if (original is List) {
    // Clone a list and its elements recursively
    return original.map((item) => clone(item)).toList();
  } else if (original is Map) {
    // Clone a map and its values recursively
    return original.map((key, value) => MapEntry(clone(key), clone(value)));
  } else {
    // For non-list and non-map types, return the original value
    return original;
  }
}

List<T> cloneList<T>(List<T> original) {
    return original.map((item) => item).toList();
  }
